#!/bin/bash

# (l)ast (c)ommit

set -e

function lastrev() {
  git --no-pager log --no-merges --author="$1" -1 --format="%h"
}

function filesforrev() {
  git diff-tree --no-commit-id --name-only -r $1
}

me="$(git config user.email)"
rev="$(lastrev $me)"
files="$(filesforrev $rev | tr '\n' ' ')"

nvim ${files}
